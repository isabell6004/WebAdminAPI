<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" strict="true" name="XMLConfigTest" packages="">

    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36}.%M:%line - %msg%n</Property>
        <Property name="SERVER_PORT">29921</Property>
        <Property name="LOG_PATH">/var/www/logs/webadmin_api/</Property>
        <Property name="LOG_FILENAME">WebAdminAPI</Property>
    </Properties>
    
    <Appenders>
        <Console name="CONSOLE" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>
        
		<RollingFile name="LOG_ROLLING">
			<FileName>${LOG_PATH}${LOG_FILENAME}_${SERVER_PORT}.log</FileName>
			<FilePattern>${LOG_PATH}${LOG_FILENAME}_${SERVER_PORT}.%d{yyyy-MM-dd}.log</FilePattern>
			<PatternLayout>
				<Pattern>${LOG_PATTERN}</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="2" modulate="true" />
			</Policies>
			<DefaultRolloverStrategy max="30" />
		</RollingFile>

		<RollingFile name="PERFORMANCE_ROLLING">
			<FileName>${LOG_PATH}${LOG_FILENAME}_PERFORMANCE_${SERVER_PORT}.log</FileName>
			<FilePattern>${LOG_PATH}${LOG_FILENAME}_PERFORMANCE_${SERVER_PORT}.%d{yyyy-MM-dd}.log</FilePattern>
			<ThresholdFilter level="WARN" onMatch="DENY" onMismatch="ACCEPT"/>
			<PatternLayout>
				<Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
			</PatternLayout>
			<TimeBasedTriggeringPolicy />
		</RollingFile>
    </Appenders>
    
    <Loggers>
	    <Root level="INFO">
	    	<AppenderRef ref="CONSOLE"/>
	    	<AppenderRef ref="LOG_ROLLING" />
	    </Root>
        <logger name="org.hibernate.SQL" level="INFO" additivity="false">
			<AppenderRef ref="LOG_ROLLING" />
		</logger>
		<Logger name="net.fashiongo.show.api" level="DEBUG" additivity="false">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="LOG_ROLLING" />
        </Logger>
		<Logger name="net.fashiongo.billing.system.PerformanceMonitor" level="INFO" additivity="false">
            <AppenderRef ref="PERFORMANCE_ROLLING" />
        </Logger>
    </Loggers>
    
</Configuration>